<Window x:Class="SpectrumAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpectrumAnalyzer"
        xmlns:vm="clr-namespace:SpectrumAnalyzer.ViewModels"
        mc:Ignorable="d"
        Title="Анализатор Спектра Аудио" Height="600" Width="800"
        MinHeight="400" MinWidth="600"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:SpectrumAnalyzerViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <!-- Orange gradient brush for spectrum bars -->
        <LinearGradientBrush x:Key="SpectrumBarBrush" StartPoint="0,1" EndPoint="0,0">
            <GradientStop Color="#FF8C00" Offset="0"/>
            <GradientStop Color="#FFD700" Offset="0.5"/>
            <GradientStop Color="#FFA500" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Orange gradient brush with glow effect -->
        <LinearGradientBrush x:Key="SpectrumBarGlowBrush" StartPoint="0,1" EndPoint="0,0">
            <GradientStop Color="#FFFF8C00" Offset="0"/>
            <GradientStop Color="#FFFFD700" Offset="0.3"/>
            <GradientStop Color="#FFFFA500" Offset="0.7"/>
            <GradientStop Color="#FFFF4500" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Reflection opacity mask -->
        <LinearGradientBrush x:Key="ReflectionMask" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#80FFFFFF" Offset="0"/>
            <GradientStop Color="#40FFFFFF" Offset="0.3"/>
            <GradientStop Color="#20FFFFFF" Offset="0.7"/>
            <GradientStop Color="#00FFFFFF" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Spectrum bar style -->
        <Style x:Key="SpectrumBarStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="{StaticResource SpectrumBarBrush}"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="MinHeight" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFD700" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Reflection bar style -->
        <Style x:Key="ReflectionBarStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="{StaticResource SpectrumBarBrush}"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="MinHeight" Value="1"/>
            <Setter Property="Opacity" Value="0.4"/>
        </Style>
        
        <!-- Dark slider style -->
        <Style x:Key="DarkSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#FF8C00"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Main spectrum display area -->
        <Grid Grid.Row="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Main spectrum bars -->
            <Border Grid.Row="0" Background="#000000" BorderBrush="#333333" BorderThickness="1" CornerRadius="5">
                <ItemsControl x:Name="SpectrumBars" ItemsSource="{Binding SpectrumData}" Margin="10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" VerticalAlignment="Bottom"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Rectangle Style="{StaticResource SpectrumBarStyle}"
                                     Height="{Binding Converter={x:Static local:HeightConverter.Instance}}"
                                     VerticalAlignment="Bottom">
                                <Rectangle.RenderTransform>
                                    <ScaleTransform ScaleY="1"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            
            <!-- Reflection spectrum bars -->
            <Border Grid.Row="1" Background="#000000" BorderBrush="#333333" BorderThickness="1" CornerRadius="5">
                <ItemsControl x:Name="ReflectionBars" ItemsSource="{Binding SpectrumData}" Margin="10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Rectangle Style="{StaticResource ReflectionBarStyle}"
                                     Height="{Binding Converter={x:Static local:ReflectionHeightConverter.Instance}}"
                                     VerticalAlignment="Top"
                                     OpacityMask="{StaticResource ReflectionMask}">
                                <Rectangle.RenderTransform>
                                    <ScaleTransform ScaleY="-1"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>
        
        <!-- Control panel -->
        <Border Grid.Row="1" Background="#2A2A2A" BorderBrush="#555555" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Control buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="▶ Старт" 
                            Command="{Binding StartCommand}"
                            Style="{StaticResource DarkButtonStyle}"
                            IsEnabled="{Binding CanStart}"
                            MinWidth="80"/>
                    <Button Content="⏹ Стоп" 
                            Command="{Binding StopCommand}"
                            Style="{StaticResource DarkButtonStyle}"
                            IsEnabled="{Binding CanStop}"
                            MinWidth="80"/>
                </StackPanel>
                
                <!-- Sensitivity control -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding SensitivityText}" 
                               Foreground="#CCCCCC" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               FontSize="12"/>
                    <Slider Value="{Binding Sensitivity}" 
                            Minimum="0.1" 
                            Maximum="5.0" 
                            SmallChange="0.1" 
                            LargeChange="0.5"
                            Style="{StaticResource DarkSliderStyle}"
                            Width="120"
                            TickFrequency="0.5"
                            IsSnapToTickEnabled="True"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Status bar -->
        <Border Grid.Row="2" Background="#1A1A1A" BorderBrush="#555555" BorderThickness="0,1,0,0" Padding="20,10">
            <TextBlock Text="{Binding StatusText}" 
                       Foreground="#CCCCCC" 
                       FontSize="12"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>